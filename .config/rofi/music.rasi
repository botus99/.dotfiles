/*****----- Configuration -----*****/
configuration {
    show-icons: false;
    disable-history: true;
    hide-scrollbar: true;
}

/*****----- Global Properties -----*****/
* {
    font: "Mononoki Nerd Font Mono 24.5";
    background: #1d2021;
    foreground: #ebdbb2;
    selected-normal-background: #282828;
    selected-active-background: #fb4934;
    selected-urgent-background: #458588;
}

@import "~/.cache/wal/colors-rofi-dark.rasi"

window {
    padding: 0.5em;
    border: 0.15em;
    border-color: @selected-active-background;
    border-radius: 0.333em;
    background-color: @background;
}

mainbox {
    spacing: 0.5em;
}

listview {
    columns: 8;
    lines: 1;
    spacing: 0.5em;
}

element {
    padding: 1em;
    border-radius: 0.333em;
    background-color: @selected-active-background;
}

element-text {
    horizontal-align: 0.5;
    vertical-align: 0.5;
}

element.selected.normal {
    background-color: @selected-active-background;
}

inputbar {
    enabled: false;
    margin: 0 0 0em 0;
    border: 0.1em;
    border-color: @foreground;
    border-radius: 0.5em;
}

message {
    enabled: true;
    margin: 0.5em;
    text-color: @foreground;
    padding: 0.25em 0em 0.25em 0em;
}

textbox {
    horizontal-align: 0.5;
    text-color: @foreground;
}
