	1) notify-send "ğŸ–¥ cpu hogs" "$(ps axch -o cmd,%cpu | awk '{cmd[$1]+=$2} END {for (i in cmd) print i, cmd[i]}' | sort -nrk2  | head)\\n(100% per core)" ;;
	2) setsid -f "$TERMINAL" -e btop ;;
	3) notify-send "ğŸ–¥ cpu module " "\ï© click to show intensive processes
ï© middle click to open btop" ;;
	6) setsid -f "$TERMINAL" -e "$EDITOR" "$0" ;;
esac

